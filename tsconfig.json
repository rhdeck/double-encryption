{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "allowJs": false,
    "module": "commonjs",
    "lib": ["es2018", "es2015"],
    "strict": true,
    "noEmitOnError": false,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "strictNullChecks": false,
    "rootDir": "src",
    "inlineSourceMap": true,
    "declarationDir": "lib/types"
  },
  "include": ["src/*"]
}
